<Window x:Class="Hieda.View.Window.GenresSelector"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:loc="http://schemas.tomer.com/winfx/2006/xaml/presentation"
		Title="Genres selector" Height="300" Width="300" ResizeMode="CanResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
	<Grid Background="{StaticResource Window_BackgroundColor}">
		<ListBox x:Name="list_Genres" Margin="0,0,0,23"/>
		<Button loc:Translate.Uid="save" Content="{loc:Translate Save}" Click="button_Save_Click" Height="23" VerticalAlignment="Bottom"/>
	</Grid>
</Window>
