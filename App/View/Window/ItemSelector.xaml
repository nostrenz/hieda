<Window
	x:Class="Hieda.View.Window.ItemSelector"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Hieda.View.Element"
	mc:Ignorable="d"
	Title="Selector" Height="290" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
	<Grid Background="{StaticResource Window_BackgroundColor}">
		<local:PlaceholderTextBox x:Name="TextBox_Filter" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Filter..." VerticalAlignment="Top" Width="384" TextChanged="TextBox_Filter_TextChanged" Placeholder="Filter..."/>
		<ListBox x:Name="ListBox_Items" HorizontalAlignment="Left" Height="203" Margin="0,23,0,0" VerticalAlignment="Top" Width="384"/>
		<Button Content="Confirm" HorizontalAlignment="Left" Margin="0,226,0,0" VerticalAlignment="Top" Width="384" Click="Button_Confirm_Click"/>
	</Grid>
</Window>
