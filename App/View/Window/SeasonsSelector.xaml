<Window
	x:Class="Hieda.View.Window.SeasonsSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Hieda.View.Window"
    mc:Ignorable="d"
    Title="SeasonsSelector"
	Topmost="True"
	Height="300" Width="356"
	MaxWidth="356" MaxHeight="300"
	WindowStyle="ToolWindow"
	ResizeMode="NoResize">
	<Grid Background="{StaticResource Collection_BackgroundColor}">
		<Label Content="Select the seasons which will receive the new informations" Margin="10,10,10,0" VerticalAlignment="Top"/>
		<ListBox x:Name="ListBox_CheckBoxes" Margin="0,39,0,50"/>
		<Button Content="Confirm" Click="Button_Confirm_Click" Height="20" VerticalAlignment="Bottom"/>
		<Button Content="Check all" HorizontalAlignment="Left" Margin="0,0,0,25" Width="173" Click="Button_CheckAll_Click" Height="20" VerticalAlignment="Bottom"/>
		<Button Content="Uncheck all" Margin="178,0,0,25" Click="Button_UncheckAll_Click" Height="20" VerticalAlignment="Bottom"/>
	</Grid>
</Window>
