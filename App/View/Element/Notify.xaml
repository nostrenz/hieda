<UserControl
	x:Class="Hieda.View.Element.Notify"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	Width="672" Height="55.083">
	<Grid Background="{StaticResource {x:Static SystemColors.WindowFrameBrushKey}}" Opacity="0.85">
		<Label x:Name="label_title" Foreground="White" Content="Title" Margin="52,3,10,13" FontSize="17"/>
		<TextBlock x:Name="textblock_message" Text="Message" Foreground="#FFDADADA" Margin="57,30,10,5" FontSize="13"/>
		<Image x:Name="icon" HorizontalAlignment="Left" Margin="15,10,0,13" Width="32" Source="pack://siteoforigin:,,,/res/notif.png" RenderOptions.BitmapScalingMode="LowQuality"/>
	</Grid>
</UserControl>
